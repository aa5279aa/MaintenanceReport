<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/hotel_city_item_title_line"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:minHeight="50dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/report_fill_equipment_name"
                style="@style/text_14_000000"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="设备名称" />

            <TextView
                android:id="@+id/report_fill_equipment_edit"
                style="@style/text_16_000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/tag_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/tag1"
                style="@style/text_12_090909"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/stock_search_hot_button_bg"
                android:text="球  阀" />

            <Button
                android:id="@+id/tag2"
                style="@style/text_12_090909"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/stock_search_hot_button_bg"
                android:text="旋塞阀" />

            <Button
                android:id="@+id/tag3"
                style="@style/text_12_090909"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/stock_search_hot_button_bg"
                android:text="排污阀" />

            <Button
                android:id="@+id/tag4"
                style="@style/text_12_090909"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/stock_search_hot_button_bg"
                android:text="放空阀" />

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:minHeight="40dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/report_fill_specifications_name"
            style="@style/text_14_000000"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="规格型号" />

        <EditText
            android:id="@+id/report_fill_specifications_edit"
            style="@style/text_16_000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请填写规格型号" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:minHeight="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/report_fill_number_name"
            style="@style/text_14_000000"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="设备编号" />

        <EditText
            android:id="@+id/report_fill_number_edit"
            style="@style/text_16_000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="请填设备编号" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:minHeight="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/report_fill_situation_name"
            style="@style/text_14_000000"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="检查与维护保养情况" />

        <EditText
            android:id="@+id/report_fill_situation_edit"
            style="@style/text_16_000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请填写保养情况"
            android:minHeight="50dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:minHeight="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/report_fill_desc_name"
            style="@style/text_14_000000"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="备注" />

        <EditText
            android:id="@+id/report_fill_desc_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请填写备注"
            android:minHeight="50dp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#ffffff" />
</LinearLayout>