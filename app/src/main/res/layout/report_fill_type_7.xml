<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_above="@id/bottomlayout"
    android:layout_below="@id/text_title">

    <com.lxl.valvedemo.view.ListLinearLayout
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include
                android:id="@+id/report_header_type7"
                layout="@layout/report_fill_type_7_header" />

            <LinearLayout
                android:id="@+id/report_fill_contanier"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/text_20_ffffff_b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/hotel_city_item_title_line"
                    android:text="备注" />

                <EditText
                    android:id="@+id/desc_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="输入备注信息"
                    android:text="备注信息" />

            </LinearLayout>

        </LinearLayout>

    </com.lxl.valvedemo.view.ListLinearLayout>
</ScrollView>

