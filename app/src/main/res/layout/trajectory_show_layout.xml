<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/contanier"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/hotel_background_white"
    android:orientation="vertical">

    <com.lxl.valvedemo.view.StockTitleView
        android:id="@+id/stock_title_view"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:stock_title_text_msg="轨迹记录" />

    <com.lxl.valvedemo.view.DrawLineView
        android:id="@+id/stock_title_view2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/carrental_dark2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/open_file"
                style="@style/text_14_ffffff"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/report_button"
                android:gravity="center"
                android:text="去往文件夹" />

            <TextView
                android:id="@+id/back_btn1"
                style="@style/text_14_ffffff"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/report_button"
                android:gravity="center"
                android:text="返回首页" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>